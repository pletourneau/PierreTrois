@{
  Layout = "_Layout";
}
@model PierreTrois.Models.Flavor;

<h4>Edit a flavor </h4>


<p>Edit this flavor's info: @Html.DisplayFor(flavor => flavor.Name)</p>
<hr/>

@using (Html.BeginForm())
{
  @Html.HiddenFor(flavor => flavor.FlavorId)

  <h3>@Html.LabelFor(flavor => flavor.Name)</h3>
  <h3>@Html.EditorFor(flavor => flavor.Name)</h3>
  <br>
  
  <input type="submit" value="Edit Changes" class="btn btn-primary" />
  <hr/>
}