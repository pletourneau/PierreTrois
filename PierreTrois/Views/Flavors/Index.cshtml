@{
  Layout = "_Layout";
}

@using PierreTrois.Models;

<h4>List of Flavor profiles</h4>
<hr /> 

@if (@Model.Count == 0)
{
  <p>There are no Flavors to display</p>
}

<h5>Click on a flavor below to see which treats have these flavors!</h5>
@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}
<hr/>
<p>@Html.ActionLink("Create Flavor", "Create")</p>