@{
  Layout = "_Layout";
}

@model PierreTrois.Models.Treat;
@using System;

<div class="container">
  
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  
  @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:", new { @class = "text-danger", @style = "font-weight: 600;"})
  @using (Html.BeginForm())
  {
    <h4>@Html.LabelFor(model => model.Name)</h4>
    @Html.TextBoxFor(model => model.Name)
    <br/>
    <input type="submit" value="Submit" class="btn btn-primary"/>
  }
</div>
<hr />
<br/>
<div class="container">
<h3>Links</h3>
  <h5>@Html.ActionLink("Back to Treats", "Index")</h5>
</div>


