@{
  Layout = "_Layout";
}

<!-- @using System.Linq; -->
@using PierreTrois.Models;
@model List<PierreTrois.Models.Treat>;

<h4>List of Treats</h4>
<hr /> 

@if(Model.Count == 0)
{
  <h3>No treats have been added yet.</h3>
}
else
{
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
  }
}
<hr/>
@Html.ActionLink("Create Treat", "Create")